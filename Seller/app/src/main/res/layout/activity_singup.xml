<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.in.lapshop.seller.singup.Singup">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="25dp"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/tt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/e1"
                    android:inputType="text"
                    android:drawableStart="@drawable/ic_action_login"
                    android:drawableTint="@color/deeppurple"
                    android:hint="First Name"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/tt2"
                android:layout_below="@id/tt1"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/e2"
                    android:inputType="text"
                    android:drawableStart="@drawable/ic_action_login"
                    android:drawableTint="@color/deeppurple"
                    android:hint="Last Name"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/tt3"
                android:layout_below="@id/tt2"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/e3"
                    android:inputType="textEmailAddress"
                    android:drawableStart="@drawable/ic_action_email"
                    android:drawableTint="@color/deeppurple"
                    android:hint="Email"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tt4"
                android:layout_below="@id/tt3"
                app:passwordToggleEnabled="true">
                <EditText
                    android:id="@+id/e4"
                    android:inputType="textPassword"
                    android:drawableStart="@drawable/ic_action_login"
                    android:drawableTint="@color/deeppurple"
                    android:hint="password"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tt5"
                android:layout_below="@id/tt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/e5"
                    android:inputType="numberDecimal"
                    android:drawableStart="@drawable/ic_action_contact"
                    android:drawableTint="@color/deeppurple"
                    android:hint="Mobile Number"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:layout_below="@id/tt5"
                android:layout_centerInParent="true"
                android:id="@+id/b1"
                android:text="Submit"
                android:background="@drawable/mybutton"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
