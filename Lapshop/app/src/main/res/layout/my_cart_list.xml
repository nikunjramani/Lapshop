<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/cardView_mycart"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/laptop_title"
                    android:text="Acer Core i5 7th Gen"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_below="@id/laptop_title"
                    android:id="@+id/laptop_brand"
                    android:text="Brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_below="@id/laptop_brand"
                    android:id="@+id/screen_size"
                    android:text="15.6 inch"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/dd"
                    android:layout_below="@id/screen_size"
                    android:text="Free Delivery in 3-4 Days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_below="@id/dd"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/laptop_price"
                    android:text="35000"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:src="@drawable/showlaptop_laptop"
                    android:id="@+id/imageView"
                    android:layout_width="130dp"
                    android:layout_height="130dp" />

                <Spinner
                    android:layout_toRightOf="@id/laptop_price"
                    android:layout_below="@id/dd"
                    android:id="@+id/spiner"
                    android:layout_marginRight="50dp"
                    android:layout_width="100dp"
                    android:layout_height="35dp" />
                <TextView
                    android:gravity="center"
                    android:layout_below="@id/laptop_price"
                    android:drawableStart="@drawable/mycart_wishlist"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/wishlist_myCart"
                    android:background="@color/white"
                    android:textAlignment="textStart"
                    android:layout_alignParentLeft="true"
                    android:text="Move to Wishlist"
                    android:textSize="15sp"
                    android:layout_width="170dp"
                    android:layout_height="40dp" />
                <TextView
                    android:gravity="center"
                    android:layout_below="@id/laptop_price"
                    android:background="@color/white"
                    android:layout_toRightOf="@id/wishlist_myCart"
                    android:drawableStart="@drawable/mycart_wishlist_remove"
                    android:id="@+id/remove_myCart"
                    android:textSize="15sp"
                    android:text="Remove"
                    android:textAlignment="textStart"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
