<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.in.lapshop.lapshop.homepage.Account">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/editAccount_homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_user"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/homepage_account_maleprofile" />

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_user"
                android:layout_centerHorizontal="true"
                android:text="Nikunj Ramani"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_name"
                android:layout_centerHorizontal="true"
                android:text="nikunjramani7624@gmail.com"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/homepage_account_my_orders"
                android:text="View Order"
               android:textSize="15sp"
                android:id="@+id/view_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textView_myWalletAndCard"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/homepage_account_card"
                android:text="Mange Payments Methods"
               android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textView_Notification"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableTint="#8f8b8d"
                android:drawableStart="@drawable/homepage_account_notification"
                android:text="Notification"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView_ManageAddress"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/homepage_account_address"
                android:text="Manage Address"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/myProfile"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/homepage_account_user"
                android:text="My Profile"
               android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/homepage_account_rate"
                android:text="Rate Your Purchase"
               android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/homepage_account_help"
                android:text="Help And Support"
               android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/homepage_account_rate"
                android:text="Rate the App"
               android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/logout"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/homepage_account_signout"
                android:text="Logout"
               android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
</android.support.v4.widget.NestedScrollView>
