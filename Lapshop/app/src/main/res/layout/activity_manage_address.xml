<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.in.lapshop.lapshop.address.ManageAddress">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_manage_address"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/address_manage_address_addaddress"
            android:text="Add a new address"
            android:textColor="@color/deeppurple"
            android:textSize="20sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/cardview_manage_address"
        android:layout_margin="10dp"
        android:id="@+id/recyclerView_mageaddress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
